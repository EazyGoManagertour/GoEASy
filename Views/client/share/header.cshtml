<div class="header-upper py-30 rpy-0">
    <div class="container-fluid clearfix">

        <div class="header-inner rel d-flex align-items-center">
            <div class="logo-outer">
                <div class="logo"><a href="/"><img src="@Url.Content("~/assets/images/logos/logo.png")" alt="Logo" title="Logo"></a></div>
            </div>

            <div class="nav-outer mx-lg-auto ps-xxl-5 clearfix">
                <!-- Main Menu -->
                <nav class="main-menu navbar-expand-lg">
                    <div class="navbar-header">
                        <div class="mobile-logo">
                            <a href="/">
                                <img src="@Url.Content("~/assets/images/logos/logo.png")" alt="Logo" title="Logo">
                            </a>
                        </div>

                        <!-- Toggle Button -->
                        <button type="button" class="navbar-toggle" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>

                    <div class="navbar-collapse collapse clearfix">
                        <ul class="navigation clearfix">
                            <li class="dropdown current">
                                <a href="/">Trang Chủ</a>
                                <ul>
                                    <li><a href="#">Công Ty Du Lịch</a></li>
                                    <li><a href="#">Tour Thành Phố</a></li>
                                    <li><a href="#">Gói Tour</a></li>
                                </ul>
                            </li>
                            <li><a href="/tour-list">Danh Sách Tour</a></li>
                            <li><a href="/blog">Blog</a></li>
                        </ul>
                    </div>

                </nav>
                <!-- Main Menu End-->
            </div>

            <!-- Nav Search -->
            <div class="nav-search">
                <button class="far fa-search"></button>
                <form action="#" class="hide">
                    <input type="text" placeholder="Search" class="searchbox" required="">
                    <button type="submit" class="searchbutton far fa-search"></button>
                </form>
            </div>

            <!-- Menu Button -->
            @{
                var isLoggedIn = Context.Session.GetInt32("UserID") != null;
                var userName = Context.Session.GetString("UserName") ?? "User";
                var userAvatar = "/assets/images/blog/comment-author1.jpg"; // Dùng avatar mẫu feedback
            }
            <div class="menu-btns py-10 d-flex align-items-center" style="gap:12px;">
                @if (!isLoggedIn)
                {
                    <a href="/login" class="theme-btn style-two" id="loginBtn" style="display: inline-flex; align-items: center; gap: 8px;">
                        <i class="fas fa-sign-in-alt"></i> Đăng nhập
                    </a>
                }
                else
                {
                    <!-- Đưa chuông thông báo lên trước avatar -->
                    <div class="dropdown d-inline-block me-2" id="notificationDropdown">
                        <a href="#" class="btn btn-light position-relative" id="notifBtn" data-bs-toggle="dropdown" aria-expanded="false" style="padding: 8px 16px;">
                            <i class="fas fa-bell"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="notifCount" style="display:none;">0</span>
                        </a>
                        <ul class="dropdown-menu notification-dropdown-menu dropdown-menu-end w-100" aria-labelledby="notifBtn" id="notifList" style="max-height: 450px; overflow-y: auto;">
                            <li class="dropdown-header" style="padding: 12px 20px; background: #f8f9fa; border-bottom: 1px solid #e5e5e5; font-weight: 600; color: #333; font-size: 16px;">
                                <i class="fas fa-bell me-2"></i>Thông báo
                            </li>
                            <li class="dropdown-item text-muted" style="padding: 20px; text-align: center; font-size: 15px;">Không có thông báo mới</li>
                        </ul>
                    </div>
                    <div class="dropdown d-inline-block">
                        <a href="#" class="d-inline-flex align-items-center dropdown-toggle btn btn-light" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="gap:12px; padding: 12px 24px; border-radius: 12px; background: #fff; color: #1a2a36; font-weight: 600; box-shadow: 0 4px 16px rgba(0,0,0,0.08); border: none; font-size: 16px;">
                            <img src="@userAvatar" alt="Avatar" style="width:40px;height:40px;border-radius:50%;object-fit:cover;border: 2px solid #e5e5e5;">
                            <span>@userName</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end w-100" aria-labelledby="userDropdown" style="min-width: 280px; padding: 8px 0; border-radius: 12px; box-shadow: 0 8px 32px rgba(0,0,0,0.12); border: 1px solid #e5e5e5;">
                            <li class="dropdown-header" style="padding: 12px 20px; background: #f8f9fa; border-bottom: 1px solid #e5e5e5; font-weight: 600; color: #333; font-size: 16px;">
                                <i class="fas fa-user me-2"></i>Tài khoản
                            </li>
                            <li><a class="dropdown-item" href="/profile" style="padding: 15px 20px; font-size: 15px; color: #333;"><i class="fas fa-user me-3"></i> Hồ sơ cá nhân</a></li>
                            <li><a class="dropdown-item" href="/booking/history" style="padding: 15px 20px; font-size: 15px; color: #333;"><i class="fas fa-history me-3"></i> Lịch sử giao dịch</a></li>
                            <li><hr class="dropdown-divider" style="margin: 8px 0;"></li>
                            <li>
                                <form method="post" action="/login/logout" style="margin:0;">
                                    <button class="dropdown-item" type="submit" style="padding: 15px 20px; font-size: 15px; color: #dc3545; border: none; background: none; width: 100%; text-align: left;"><i class="fas fa-sign-out-alt me-3"></i> Đăng xuất</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
                <!-- menu sidbar -->
                @if (!isLoggedIn)
                {
                    <div class="menu-sidebar">
                        <button class="bg-transparent">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<style>
/* Đảm bảo dropdown-menu user rộng bằng toggle */
#userDropdown + .dropdown-menu {
    min-width: unset;
    width: 100%;
    box-sizing: border-box;
}
/* Phóng to dropdown thông báo, cho phép xuống dòng, ẩn cuộn ngang */
.notification-dropdown-menu {
    min-width: 400px !important;
    max-width: 500px;
    max-height: 450px !important;
    white-space: normal;
    overflow-x: hidden;
    padding: 15px 0;
    border-radius: 12px;
    box-shadow: 0 8px 32px rgba(0,0,0,0.12);
    border: 1px solid #e5e5e5;
}
.notification-item {
    white-space: normal;
    word-break: break-word;
    padding: 15px 20px;
    border-bottom: 1px solid #f0f0f0;
    transition: background-color 0.2s ease;
}
.notification-item:hover {
    background-color: #f8f9fa;
}
.notification-item:last-child {
    border-bottom: none;
}
.notification-item b {
    color: #333;
    font-size: 16px;
    font-weight: 600;
    display: block;
    margin-bottom: 8px;
}
.notification-item span {
    color: #666;
    font-size: 15px;
    line-height: 1.5;
    display: block;
    margin-bottom: 10px;
}
.notification-item small {
    color: #999;
    font-size: 13px;
}

/* CSS cho dropdown user */
#userDropdown + .dropdown-menu .dropdown-item:hover {
    background-color: #f8f9fa;
    transition: background-color 0.2s ease;
}
#userDropdown + .dropdown-menu .dropdown-item {
    transition: background-color 0.2s ease;
}
</style>
<script>
document.addEventListener('DOMContentLoaded', function() {
    var notifList = document.getElementById('notifList');
    var notifCount = document.getElementById('notifCount');
    var notifBtn = document.getElementById('notifBtn');
    var notifUnread = 0;
    var notifHasBeenOpened = false;
    if (!!window.EventSource) {
        var source = new EventSource('/notification/stream');
        source.onmessage = function(event) {
            var n = JSON.parse(event.data);
            notifUnread++;
            notifCount.innerText = notifUnread;
            notifCount.style.display = '';
            notifHasBeenOpened = false; // Có event mới, cho phép hiện badge lại
            // Thêm thông báo mới lên đầu, hiển thị chi tiết
            var li = document.createElement('li');
            li.className = 'dropdown-item notification-item';
            li.setAttribute('data-booking-id', n.RelatedId || '');
            li.style.cursor = 'pointer';
            
            // Format thời gian đẹp hơn
            var createdAt = new Date(n.CreatedAt);
            var timeString = createdAt.toLocaleString('vi-VN', {
                day: '2-digit',
                month: '2-digit',
                year: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });
            
            li.innerHTML = `
                <b>${n.Title}</b>
                <span>${n.Message}</span>
                <small>${timeString}</small>
            `;
            li.addEventListener('click', function() {
                // Đánh dấu notification đã đọc
                li.style.opacity = '0.6';
                li.style.fontWeight = 'normal';
                
                if (n.RelatedId) {
                    window.location.href = '/booking/history?open=' + n.RelatedId;
                } else {
                    window.location.href = '/booking/history';
                }
            });
            notifList.prepend(li);
            // Xóa dòng 'Không có thông báo mới' nếu có
            var empty = notifList.querySelector('.text-muted');
            if (empty && notifList.children.length > 1) empty.remove();
        };
    }
    notifBtn.addEventListener('click', function() {
        notifUnread = 0;
        notifCount.style.display = 'none';
        notifHasBeenOpened = true;
    });
});
</script>