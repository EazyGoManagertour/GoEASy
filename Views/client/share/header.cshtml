<div class="header-upper py-30 rpy-0">
    <div class="container-fluid clearfix">

        <div class="header-inner rel d-flex align-items-center">
            <div class="logo-outer">
                <div class="logo"><a href="home"><img src="@Url.Content("~/assets/images/logos/logo.png")" alt="Logo" title="Logo"></a></div>
            </div>

            <div class="nav-outer mx-lg-auto ps-xxl-5 clearfix">
                <!-- Main Menu -->
                <nav class="main-menu navbar-expand-lg">
                    <div class="navbar-header">
                        <div class="mobile-logo">
                            <a href="home">
                                <img src="@Url.Content("~/assets/images/logos/logo.png")" alt="Logo" title="Logo">
                            </a>
                        </div>

                        <!-- Toggle Button -->
                        <button type="button" class="navbar-toggle" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>

                    <div class="navbar-collapse collapse clearfix">
                        <ul class="navigation clearfix">
                            <li class="dropdown current">
                                <a href="#">Home</a>
                                <ul>
                                    <li><a href="#">Travel Agency</a></li>
                                    <li><a href="#">City Tour</a></li>
                                    <li><a href="#">Tour Package</a></li>
                                </ul>
                            </li>
                            <li><a href="tour-list">Tour list</a></li>
                            <li><a href="blog">Blog</a></li>
                            <li><a href="/contact">Liên hệ</a></li>
                        </ul>
                    </div>

                </nav>
                <!-- Main Menu End-->
            </div>

            <!-- Nav Search -->
            <div class="nav-search">
                <button class="far fa-search"></button>
                <form action="#" class="hide">
                    <input type="text" placeholder="Search" class="searchbox" required="">
                    <button type="submit" class="searchbutton far fa-search"></button>
                </form>
            </div>

            <!-- Menu Button -->
            @{
                var isLoggedIn = Context.Session.GetInt32("UserID") != null; // Sửa từ "UserId" thành "UserID"
                var userName = Context.Session.GetString("UserName") ?? "User";
                var userAvatar = "/assets/images/blog/comment-author1.jpg"; // Dùng avatar mẫu feedback
            }
            <div class="menu-btns py-10 d-flex align-items-center" style="gap:12px;">
                @if (!isLoggedIn)
                {
                    <a href="/login" class="theme-btn style-two" id="loginBtn" style="display: inline-flex; align-items: center; gap: 8px;">
                        <i class="fas fa-sign-in-alt"></i> Đăng nhập
                    </a>
                }
                else
                {
                    <!-- Đưa chuông thông báo lên trước avatar -->
                    <div class="dropdown d-inline-block me-2" id="notificationDropdown">
                        <a href="#" class="btn btn-light position-relative" id="notifBtn" data-bs-toggle="dropdown" aria-expanded="false" style="padding: 8px 16px;">
                            <i class="fas fa-bell"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="notifCount" style="display:none;">0</span>
                        </a>
                        <ul class="dropdown-menu notification-dropdown-menu dropdown-menu-end w-100" aria-labelledby="notifBtn" id="notifList" style="max-height: 350px; overflow-y: auto;">
                            <li class="dropdown-item text-muted">Không có thông báo mới</li>
                        </ul>
                    </div>
                    <div class="dropdown d-inline-block">
                        <a href="#" class="d-inline-flex align-items-center dropdown-toggle btn btn-light" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="gap:8px; padding: 8px 20px; border-radius: 8px; background: #fff; color: #1a2a36; font-weight: 600; box-shadow: 0 2px 8px rgba(0,0,0,0.04); border: none;">
                            <img src="@userAvatar" alt="Avatar" style="width:32px;height:32px;border-radius:50%;object-fit:cover;">
                            <span>@userName</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end w-100" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" href="/profile"><i class="fas fa-user"></i> Hồ sơ cá nhân</a></li>
                            <li><a class="dropdown-item" href="/booking/history"><i class="fas fa-history"></i> Lịch sử giao dịch</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form method="post" action="/login/logout" style="margin:0;">
                                    <button class="dropdown-item" type="submit"><i class="fas fa-sign-out-alt"></i> Đăng xuất</button>
                                </form>
                            </li>
                        </ul>
                    </div>
                }
                <!-- menu sidbar -->
                @if (!isLoggedIn)
                {
                    <div class="menu-sidebar">
                        <button class="bg-transparent">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<style>
/* Đảm bảo dropdown-menu user rộng bằng toggle */
#userDropdown + .dropdown-menu {
    min-width: unset;
    width: 100%;
    box-sizing: border-box;
}
/* Phóng to dropdown thông báo, cho phép xuống dòng, ẩn cuộn ngang */
.notification-dropdown-menu {
    min-width: 340px !important;
    max-width: 420px;
    white-space: normal;
    overflow-x: hidden;
}
.notification-item {
    white-space: normal;
    word-break: break-word;
}
</style>
<script>
document.addEventListener('DOMContentLoaded', function() {
    var notifList = document.getElementById('notifList');
    var notifCount = document.getElementById('notifCount');
    var notifBtn = document.getElementById('notifBtn');
    var notifUnread = 0;
    var notifHasBeenOpened = false;
    
    // Add header to dropdown
    if (notifList) {
        notifList.innerHTML = `
            <div class="notification-dropdown-header">
                <h6 class="notification-dropdown-title">
                    <i class="fas fa-bell"></i> Thông báo
                </h6>
            </div>
            <li class="notification-empty">
                <i class="fas fa-bell-slash"></i><br>
                Không có thông báo mới
            </li>
        `;
    }
    
    if (!!window.EventSource) {
        var source = new EventSource('/notification/stream');
        source.onmessage = function(event) {
            var n = JSON.parse(event.data);
            notifUnread++;
            notifCount.innerText = notifUnread;
            notifCount.style.display = '';
            notifCount.className = 'notification-badge';
            
            // Add bell animation
            notifBtn.querySelector('i').className = 'fas fa-bell notification-bell has-notifications';
            setTimeout(() => {
                notifBtn.querySelector('i').className = 'fas fa-bell notification-bell';
            }, 500);
            
            notifHasBeenOpened = false;
            
            // Create beautiful notification item
            var li = document.createElement('li');
            li.className = 'dropdown-item notification-item';
            li.setAttribute('data-booking-id', n.RelatedId || '');
            li.innerHTML = `
                <div class="notification-item-icon">
                    <i class="fas fa-info-circle"></i>
                </div>
                <div class="notification-item-content">
                    <div class="notification-item-title">${n.Title}</div>
                    <div class="notification-item-message">${n.Message}</div>
                    <div class="notification-item-time">${new Date(n.CreatedAt).toLocaleString('vi-VN')}</div>
                </div>
            `;
            
            li.addEventListener('click', function() {
                if (n.RelatedId) {
                    window.location.href = '/booking/history?open=' + n.RelatedId;
                } else {
                    window.location.href = '/booking/history';
                }
            });
            
            // Remove empty message and add new notification
            var empty = notifList.querySelector('.notification-empty');
            if (empty) empty.remove();
            
            // Insert after header
            var header = notifList.querySelector('.notification-dropdown-header');
            if (header) {
                header.insertAdjacentElement('afterend', li);
            } else {
                notifList.prepend(li);
            }
            
            // Show toast notification
            showToastNotification(n.Title, n.Message, 'info');
        };
    }
    
    notifBtn.addEventListener('click', function() {
        notifUnread = 0;
        notifCount.style.display = 'none';
        notifHasBeenOpened = true;
    });
    
    // Toast notification function
    function showToastNotification(title, message, type = 'info') {
        const toast = document.createElement('div');
        toast.className = `professional-notification ${type}`;
        
        const iconMap = {
            success: 'fas fa-check-circle',
            error: 'fas fa-exclamation-circle',
            warning: 'fas fa-exclamation-triangle',
            info: 'fas fa-info-circle'
        };
        
        toast.innerHTML = `
            <div class="notification-header">
                <div class="notification-icon">
                    <i class="${iconMap[type]}"></i>
                </div>
                <div class="notification-content">
                    <h6 class="notification-title">${title}</h6>
                    <p class="notification-message">${message}</p>
                </div>
                <button class="notification-close" onclick="this.parentElement.parentElement.remove()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="notification-timestamp">
                ${new Date().toLocaleString('vi-VN')}
            </div>
            <div class="notification-progress"></div>
        `;
        
        document.body.appendChild(toast);
        
        // Auto remove after 5 seconds
        setTimeout(() => {
            if (toast.parentElement) {
                toast.classList.add('notification-removing');
                setTimeout(() => toast.remove(), 300);
            }
        }, 5000);
    }
});
</script>
