    @{
        var hasSuccess = TempData["Success"] != null;
        var hasError = TempData["Error"] != null;
    }
    @if (hasSuccess)
    {
        <div class="toast align-items-center text-white bg-success border-0 position-fixed bottom-0 end-0 m-4" id="successToast" role="alert" aria-live="assertive" aria-atomic="true" style="z-index: 9999;">
            <div class="d-flex">
                <div class="toast-body">
                    @TempData["Success"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    }
    @if (hasError)
    {
        <div class="toast align-items-center text-white bg-danger border-0 position-fixed bottom-0 end-0 m-4" id="errorToast" role="alert" aria-live="assertive" aria-atomic="true" style="z-index: 9999;">
            <div class="d-flex">
                <div class="toast-body">
                    @TempData["Error"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    }
    <script>
        window.addEventListener('DOMContentLoaded', function () {
            var successToast = document.getElementById('successToast');
            if (successToast) {
                var toast = new bootstrap.Toast(successToast, { delay: 5000 });
                toast.show();
            }
            var errorToast = document.getElementById('errorToast');
            if (errorToast) {
                var toast = new bootstrap.Toast(errorToast, { delay: 5000 });
                toast.show();
            }
        });
    </script>
