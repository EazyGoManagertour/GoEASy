                  </div>
                </div>
              </div>
            </div> -->
            <!-- Country Stats Table -->
            <div class="country-table">
                <div class="widget-header">
                    <h3>AUDIENCE BY COUNTRY</h3>
                </div>
                <table class="analytics-table">
                    <thead>
                        <tr>
                            <th>Country</th>
                            <th>Page views</th>
                            <th>Device</th>
                            <th>% Bounce rate</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                United State
                            </td>
                            <td>18</td>
                            <td>Desktop</td>
                            <td>
                                <div class="bounce-bar">
                                    <div class="bounce-fill" style="width: 80%"></div>
                                    <span>80%</span>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Australia
                            </td>
                            <td>12</td>
                            <td>Mobile</td>
                            <td>
                                <div class="bounce-bar">
                                    <div class="bounce-fill" style="width: 75%"></div>
                                    <span>75%</span>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>

                                Brazil
                            </td>
                            <td>25</td>
                            <td>Tablet</td>
                            <td>
                                <div class="bounce-bar">
                                    <div class="bounce-fill" style="width: 68%"></div>
                                    <span>68%</span>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>

                                Great Britain (UK)
                            </td>
                            <td>8</td>
                            <td>Mobile</td>
                            <td>
                                <div class="bounce-bar orange">
                                    <div class="bounce-fill" style="width: 55%"></div>
                                    <span>55%</span>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </main>
    </div>

    @Html.Partial("~/Views/admin/share/script.cshtml")
</body>
</html>
