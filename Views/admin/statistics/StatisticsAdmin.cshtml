<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.css">
<link rel="stylesheet" href="~/css/style.css" />

<body>
    <!-- Header -->
    @Html.Partial("~/Views/admin/share/header.cshtml")

    <!-- Overlay for mobile -->
    <div class="overlay" onclick="toggleSidebar()"></div>

    <div class="container">
        <!-- Sidebar -->
        @Html.Partial("~/Views/admin/share/menu.cshtml")

        <!-- Main Content -->
        <main class="main-content">
            <!-- Top Stats Cards -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-number">23,454</div>
                    <div class="stat-label">Page Views</div>
                    <div class="stat-change positive">↑ 4.3%</div>
                    <div class="mini-chart">
                        <div class="chart-bars">
                            <div class="bar" style="height: 20%"></div>
                            <div class="bar" style="height: 40%"></div>
                            <div class="bar" style="height: 60%"></div>
                            <div class="bar" style="height: 30%"></div>
                            <div class="bar" style="height: 80%"></div>
                            <div class="bar" style="height: 50%"></div>
                            <div class="bar" style="height: 90%"></div>
                            <div class="bar" style="height: 70%"></div>
                        </div>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-number">6,630</div>
                    <div class="stat-label">Unique Visitors</div>
                    <div class="stat-change negative">↓ 2.5%</div>
                    <div class="mini-chart">
                        <div class="chart-bars red">
                            <div class="bar" style="height: 30%"></div>
                            <div class="bar" style="height: 60%"></div>
                            <div class="bar" style="height: 40%"></div>
                            <div class="bar" style="height: 80%"></div>
                            <div class="bar" style="height: 20%"></div>
                            <div class="bar" style="height: 70%"></div>
                            <div class="bar" style="height: 50%"></div>
                            <div class="bar" style="height: 90%"></div>
                        </div>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-number">86,578</div>
                    <div class="stat-label">Total Visits</div>
                    <div class="stat-change positive">↑ 12.5%</div>
                    <div class="mini-chart">
                        <div class="chart-bars orange">
                            <div class="bar" style="height: 50%"></div>
                            <div class="bar" style="height: 70%"></div>
                            <div class="bar" style="height: 40%"></div>
                            <div class="bar" style="height: 90%"></div>
                            <div class="bar" style="height: 60%"></div>
                            <div class="bar" style="height: 30%"></div>
                            <div class="bar" style="height: 80%"></div>
                            <div class="bar" style="height: 100%"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Chart Area -->
            <div class="chart-container">
                <canvas id="mainChart"></canvas>
            </div>

            <!-- Middle Stats Row -->
            <div class="middle-stats">
                <div class="stat-item">
                    <div class="stat-icon user-icon"><i class="fas fa-user"></i></div>
                    <div class="stat-info">
                        <div class="stat-percent">78%</div>
                        <div class="stat-desc">New Sessions</div>
                        <div class="progress-bar">
                            <div class="progress-fill" style="width: 78%"></div>
                        </div>
                    </div>
                </div>

                <div class="stat-item">
                    <div class="stat-icon visits-icon">
                        <i class="fas fa-chart-bar"></i>
                    </div>
                    <div class="stat-info">
                        <div class="stat-percent">423</div>
                        <div class="stat-desc">Total Visits</div>
                        <div class="progress-bar red">
                            <div class="progress-fill" style="width: 60%"></div>
                        </div>
                    </div>
                </div>

                <div class="stat-item">
                    <div class="stat-icon bounce-icon">
                        <i class="fas fa-layer-group"></i>
                    </div>
                    <div class="stat-info">
                        <div class="stat-percent">64.89%</div>
                        <div class="stat-desc">Bounce Rate</div>
                        <div class="progress-bar">
                            <div class="progress-fill" style="width: 65%"></div>
                        </div>
                    </div>
                </div>

                <div class="stat-item">
                    <div class="stat-icon duration-icon">
                        <i class="fas fa-globe"></i>
                    </div>
                    <div class="stat-info">
                        <div class="stat-percent">02:12</div>
                        <div class="stat-desc">Session Duration</div>
                        <div class="progress-bar orange">
                            <div class="progress-fill" style="width: 45%"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bottom Section -->
            <div class="bottom-section">
                <!-- Session Duration Chart -->
                <div class="chart-widget">
                    <div class="widget-header">
                        <h3>AVG. SESSION DURATION & PAGES/SESSION</h3>
                    </div>
                    <div class="area-chart">
                        <canvas id="sessionChart"></canvas>
                    </div>
                </div>

                <!-- Goals Completion -->
                <div class="goals-widget">
                    <div class="widget-header">
                        <h3>GOALS COMPLETION</h3>
                    </div>
                    <div class="goals-list">
                        <div class="goal-item">
                            <div class="goal-info">
                                <span class="goal-name">Account</span>
                                <span class="goal-value">$0.18</span>
                            </div>
                            <div class="goal-progress">
                                <div class="progress-bar">
                                    <div class="progress-fill" style="width: 85%"></div>
                                </div>
                                <span class="goal-percent">85%</span>
                            </div>
                        </div>
                        <div class="goal-item">
                            <div class="goal-info">
                                <span class="goal-name">Subscribe</span>
                                <span class="goal-value">$9.12</span>
                            </div>
                            <div class="goal-progress">
                                <div class="progress-bar">
                                    <div class="progress-fill" style="width: 75%"></div>
                                </div>
                                <span class="goal-percent">75%</span>
                            </div>
                        </div>
                        <div class="goal-item">
                            <div class="goal-info">
                                <span class="goal-name">Mobile</span>
                                <span class="goal-value">$2.20</span>
                            </div>
                            <div class="goal-progress">
                                <div class="progress-bar orange">
                                    <div class="progress-fill" style="width: 60%"></div>
                                </div>
                                <span class="goal-percent">60%</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- World Map and Browser Stats -->
